func abs (num: Double) -> Double {
  if num > 0.0 {
    return num
  } else {
    return -num
  }
}

func factorial(num: Double) -> Double {
  if num < 2.0 {
    return 1.0
  } else {
    return num * factorial(num-1.0)
  }
}

func pow(a: Double, b: Double) -> Double {
 if b == 0.0 {
  return 1.0
 } else if b < 2.0 {
  return a
 } else {
  return a * pow(a, b-1.0)
 }
}

func sin(angle: Double) -> Double {
  var result: Double = 0.0
  var n: Double = 1.0
  while n < 10.0 {
    let a: Double = pow(-1.0, n - 1.0)
    let b: Double = pow(angle, 2.0 * n - 1.0)
    let c: Double = factorial(2.0 * n - 1.0)
    result = result + a * b / c
    n = n + 1.0
  }
  return result
}

func cos(angle: Double) -> Double {
  var result: Double = 0.0
  var n: Int = 1
  while n < 10 {
    let a: Double = pow(-1.0, Double(n))
    let b: Double = pow(angle, 2.0 * Double(n))
    let c: Double = factorial(2.0 * Double(n))
    result = result + a * b / c
    n = n + 1
  }
  return result
}

func tan(angle: Double) -> Double {
  return sin(angle)/cos(angle)
}

func main() -> Double {
  var array: [Double, 10]
  array.0 = 0.0
  array.1 = 1.0
  array.2 = 2.0
  array.3 = 3.0
  array.4 = 4.0
  array.5 = 5.0
  array.6 = 6.0
  array.7 = 7.0
  array.8 = 8.0
  array.9 = 9.0

  return array.7
}
